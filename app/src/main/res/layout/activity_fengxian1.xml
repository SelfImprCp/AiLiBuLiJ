<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbg"
    android:orientation="vertical">


    <com.anyin.ailibuli.custom.TitleBarView

        android:id="@+id/fengxian1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.anyin.ailibuli.custom.TitleBarView>


    <com.anyin.ailibuli.custom.KJScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="@dimen/space_15"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_15"
                android:text="1.您觉得下面哪个选项可以最好的描述你的投资目标?(1/10)"
                android:textColor="@color/ailibuli_black"
                android:textSize="@dimen/text_size_12" />


            <TextView
                android:id="@+id/fenxian1_jijing"

                style="@style/fengxian_test_button"
                android:text="激进成长" />



            <TextView

                style="@style/fengxian_test_button"
                android:text="显著增长" />


            <TextView

                style="@style/fengxian_test_button"
                android:text="稳健增值" />


            <TextView

                style="@style/fengxian_test_button"
                android:text="谨慎增值" />


            <TextView

                style="@style/fengxian_test_button"
                android:text="避免亏损" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.anyin.ailibuli.custom.KJScrollView>


</LinearLayout>