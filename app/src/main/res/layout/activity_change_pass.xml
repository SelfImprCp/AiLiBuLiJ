<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/appbg"
    android:orientation="vertical">


    <com.anyin.ailibuli.custom.TitleBarView
        android:id="@+id/chgpass_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.anyin.ailibuli.custom.TitleBarView>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_15"
                android:text="帐号"
                android:textColor="@color/ailibuli_black"
                android:textSize="@dimen/text_size_sp_18" />

            <EditText
                style="@style/loginEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="11"
                android:hint="手机号"
                android:maxLength="11" />


        </com.zhy.autolayout.AutoLinearLayout>

        <View style="@style/feng_ge_xian"></View>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yanzhen_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:text="验证码"
                android:textColor="@color/ailibuli_black"
                android:textSize="@dimen/text_size_sp_18" />

            <EditText
                style="@style/loginEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_toRightOf="@id/yanzhen_text"
                android:background="@null"
                android:hint="请输入验证码"
 android:maxLength="6"
                />


            <TextView
                android:id="@+id/chgpass_get_yanzhengma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_15"
                android:padding="5dp"
                android:text="获取验证码"
                android:textColor="@color/ailibuli_black"
                android:textSize="@dimen/text_size_sp_18" />

            <View
                android:layout_width="2dp"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/space_15"
                android:layout_toLeftOf="@id/chgpass_get_yanzhengma"
                android:background="@color/appbg"></View>


        </com.zhy.autolayout.AutoRelativeLayout>


        <View style="@style/feng_ge_xian"></View>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_15"
                android:text="密码"
                android:textColor="@color/ailibuli_black"
                android:textSize="@dimen/text_size_sp_18" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_15"
                android:background="@null"
                android:hint="请输入新密码"

                android:inputType="textPassword"

                />


        </com.zhy.autolayout.AutoLinearLayout>


        <View style="@style/feng_ge_xian"></View>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_15"
                android:text="确认密码"
                android:textColor="@color/ailibuli_black"
                android:textSize="@dimen/text_size_sp_18" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_15"
                android:background="@null"
android:inputType="textPassword"

                android:hint="请再次输入新密码" />


        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>


    <Button
        android:id="@+id/my_change_password_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginTop="@dimen/space_50"
        android:background="@drawable/round_corners_button"
        android:text="完成" />


</LinearLayout>